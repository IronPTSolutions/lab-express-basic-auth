<div class="row justify-content-center">
  <div class="col col-sm-6">
    <h1 class="text-center">Log in</h1>
    <h2 class="text-center">Welcome</h2>
    <form method="POST" action="/login">
      
      <div class="input-group mb-3">  
          <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span> 
          <input type="text" name="email" class="form-control {{#if errors.email}}alert-danger{{/if}}"  placeholder="{{#if errors.email}}{{errors.email}}{{else}}Insert your email adress.{{/if}}" aria-describedby="Email" aria-describedby="Insert your email adress" value="{{user.email}}"> 
      </div>
      
      <div class="input-group mb-1">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>  
        <input type="password" name="password" class="form-control {{#if errors.password}}alert-danger{{/if}}"  placeholder="{{#if errors.password}}{{errors.password}}{{else}}Insert your password.{{/if}}" aria-describedby="Password" aria-describedby="Insert your password. Must be at least 8 characters">
      </div> 

      {{#if errorMessage}}
        <p class="btn-danger p-3 text-center">{{errorMessage}}</p>
      {{/if}}

      {{#if errors.invalidSession}}
        <p class="btn-danger p-3 text-center">{{errors.invalidSession}}</p>
      {{/if}}

      <div class="col-auto  text-center">
        <button type="submit" class="btn btn-primary mb-3 m-4">Log in</button>
      </div>
      
    </form>
  </div>
</div>