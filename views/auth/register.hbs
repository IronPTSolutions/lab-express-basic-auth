<div class="row justify-content-center">
    <div class="col col-sm-3">
        <form action="/register" method="post">

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="Username" aria-label="Username" value="{{ user.username }}">
                {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
                <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="Password" aria-label="Password">
                {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>

            <div class="d-grid gap-2">
                <button class="btn-btn-primary">Register</button>
            </div>

        </form>
    </div>

</div>